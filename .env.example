# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Groq Configuration (for faster inference)
GROQ_API_KEY=your_groq_api_key_here

# Optional: Cohere Configuration (for reranking)
COHERE_API_KEY=your_cohere_api_key_here

# Model Configuration
DEFAULT_MODEL=gpt-3.5-turbo
# Alternative models: gpt-4, gpt-4-turbo, llama-3.1-70b-versatile (Groq)
MODEL_TEMPERATURE=0.1

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Alternative: text-embedding-3-small (OpenAI), text-embedding-ada-002

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RETRIEVAL_K=4
# Number of documents to retrieve

# Vector Store Configuration
VECTOR_STORE_PATH=./chroma_store
PERSIST_DIRECTORY=./chroma_store

# Application Configuration
APP_TITLE=Enhanced RAG ChatBot Using LangChain
MAX_UPLOAD_SIZE_MB=10
ENABLE_STREAMING=true
ENABLE_RERANKING=false
